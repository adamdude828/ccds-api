# Example Terraform Variables File
# Copy this file to terraform.tfvars and fill in your values

# General Configuration
environment  = "dev"
project_name = "do-git-mis-next"

# Application URLs - Update these based on your deployment
app_url           = "http://localhost:3000"                             # Main application URL
redirect_uris     = ["http://localhost:3000/api/auth/callback/azure-ad"] # OAuth redirect URIs for web platform
spa_redirect_uris = ["http://localhost:3000/", "http://localhost:3000/dashboard"] # OAuth redirect URIs for SPA platform

# Production example:
# app_url           = "https://app.yourdomain.com"
# redirect_uris     = ["https://app.yourdomain.com/api/auth/callback/azure-ad"]
# spa_redirect_uris = ["https://app.yourdomain.com/", "https://app.yourdomain.com/dashboard"]

# Client Secret Configuration
client_secret_expiration_days = 90    # Days until the client secret expires
enable_secret_rotation        = false # Set to true to create a rotation secret

# Document Hosting Configuration
location                 = "East US"              # Azure region for resources
storage_replication_type = "LRS"                  # Storage replication type (LRS, GRS, RAGRS, ZRS, GZRS, RAGZRS)
cdn_sku                  = "Standard_Microsoft"   # CDN SKU (Standard_Microsoft, Standard_Akamai, Standard_Verizon, Premium_Verizon)
front_door_sku           = "Standard_AzureFrontDoor" # Front Door SKU (Standard_AzureFrontDoor, Premium_AzureFrontDoor)

# Production recommendations:
# storage_replication_type = "GRS"                # Geo-redundant storage for production
# front_door_sku           = "Premium_AzureFrontDoor" # Premium tier includes advanced security features 