{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mysqlServerName": {
            "type": "string"
        },
        "mysqlPrivateDns": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "mysqlSkuName": {
            "type": "string"
        },
        "mysqlSkuTier": {
            "type": "string"
        },
        "mysqlAdmin": {
            "type": "securestring"
        },
        "mysqlAdminPassword": {
            "type": "securestring"
        },
        "subnetName4": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DBforMySQL/flexibleServers",
            "apiVersion": "2022-09-30-preview",
            "name": "[parameters('mysqlServerName')]",
            "location": "West US",
            "sku": {
                "name": "[parameters('mysqlSkuName')]",
                "tier": "[parameters('mysqlSkuTier')]"
            },
            "properties": {
                "administratorLogin": "[parameters('mysqlAdmin')]",
                "administratorLoginPassword": "[parameters('mysqlAdminPassword')]",
                "storage": {
                    "storageSizeGB": 20,
                    "iops": 360,
                    "autoGrow": "Enabled",
                    "autoIoScaling": "Disabled"
                },
                "version": "5.7",
                "replicationRole": "None",
                "network": {
                    "publicNetworkAccess": "Disabled",
                    "delegatedSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnetName'),parameters('subnetName4'))]",
                    "privateDnsZoneResourceId": "[resourceId('Microsoft.Network/privateDnsZones', parameters('mysqlPrivateDns'))]"
                },
                "backup": {
                    "backupRetentionDays": 7,
                    "geoRedundantBackup": "Disabled"
                },
                "highAvailability": {
                    "mode": "Disabled"
                }
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/databases",
            "apiVersion": "2022-01-01",
            "name": "[concat(parameters('mysqlServerName'), '/vcp')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('mysqlServerName'))]"
            ],
            "properties": {
                "charset": "latin1",
                "collation": "latin1_swedish_ci"
            }
        },
        {
            "type": "Microsoft.DBforMySQL/flexibleServers/firewallRules",
            "apiVersion": "2021-12-01-preview",
            "name": "[concat(parameters('mysqlServerName'), '/UCO')]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/flexibleServers', parameters('mysqlServerName'))]"
            ],
            "properties": {
                "endIpAddress": "24.104.59.17",
                "startIpAddress": "24.104.59.17"
            }
        }
    ]
}